#!/usr/bin/env ruby

require_relative "../config/env"
require "drawing_visitors"
require "engine"
require "fetcher"
require "gosu_box_renderer"
require "gosu_text_renderer"
require "gui_window"
require "layout_visitors"
require "parser"

uri = ARGV[0]

if uri.nil? || uri.empty?
  STDERR.puts("Usage: #{$0} a_web_address")
  exit(1)
end

browser = GuiWindow.new(
  engine: Engine.new(
    fetcher: Fetcher.new,
    layout_pipeline: LAYOUT_VISITORS,
    parser: Parser.new(logger: ->(message) { puts(message) }),
  ),
  drawing_visitors: DRAWING_VISITORS,
)

browser.address = uri
browser.go

browser.show

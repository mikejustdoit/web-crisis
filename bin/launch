#!/usr/bin/env ruby

require_relative "../config/env"
require "drawing_visitors"
require "engine"
require "fetcher"
require "gosu_box_renderer"
require "gosu_text_renderer"
require "gui_window"
require "image_store"
require "layout_visitors"
require "parser"

uri = ARGV[0]

if uri.nil? || uri.empty?
  STDERR.puts("Usage: #{$0} a_web_address")
  exit(1)
end

LOGGER = ->(message) { puts(message) }

online_image_store = ->(image_dimensions_calculator:) {
  ImageStore.new(
    fetcher: Fetcher.new,
    image_dimensions_calculator: image_dimensions_calculator,
  )
}

browser = GuiWindow.new(
  engine: Engine.new(
    fetcher: Fetcher.new,
    image_store_factory: online_image_store,
    layout_pipeline: LAYOUT_VISITORS,
    parser: Parser.new,
  ),
  drawing_visitors: DRAWING_VISITORS,
)

browser.address = uri
browser.go

browser.show

#!/usr/bin/env ruby

require_relative "../config/env"
require "drawing_visitors"
require "engine"
require "gosu_box_renderer"
require "gosu_text_renderer"
require "gui_window"
require "layout_visitors"
require "local_file_image_store"
require "offline_html_fetcher"
require "parser"

=begin
  Usage:

    #{$0} path/to/local.html

    OR

    echo '<html></html>' | #{$0}
=end

uri = ARGV[0]

html = if uri.nil? || uri.empty?
  STDIN.read
else
  File.read(uri)
end

LOGGER = ->(message) { puts(message) }

browser = GuiWindow.new(
  engine: Engine.new(
    fetcher: OfflineHtmlFetcher.new(html),
    image_store: LocalFileImageStore.new,
    layout_pipeline: LAYOUT_VISITORS,
    parser: Parser.new,
  ),
  drawing_visitors: DRAWING_VISITORS,
)

browser.address = uri || "offline"
browser.go

browser.show
